<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity= "top"
    android:background="@drawable/gradient_background"
    android:orientation= "vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity= "center"
        android:orientation= "vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity= "right"
            android:orientation= "vertical">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp"
                app:srcCompat="@drawable/aaaaaalogo" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity= "center"
            android:orientation= "horizontal">

            <Button
                android:id="@+id/go_back_to_all_conv_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="BACK" />

        <TextView
            android:id="@+id/name_messages_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:ems="12"
            android:layout_marginTop="0dp"
            android:text="JOSE"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_above="@+id/typing_space"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/typing_space"
        app:layout_constraintEnd_toEndOf="@id/typing_space"
        app:layout_constraintStart_toStartOf="@id/typing_space"
        app:layout_constraintTop_toBottomOf="@id/typing_space">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messages_recycler_view_23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"

            tools:listitem="@layout/message_like_whatsapp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/typing_space"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity= "bottom"
        android:orientation= "horizontal">

        <EditText
            android:id="@+id/newMessageEdittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sendmessagebutton"
            android:ems="17"
            android:inputType="textPersonName"
            android:text="Name" />

        <ImageButton
            android:id="@+id/sendmessagebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/ic_baseline_send_24" />



    </LinearLayout>

</LinearLayout>