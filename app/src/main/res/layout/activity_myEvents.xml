<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".events_screen_activity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp"
                app:srcCompat="@drawable/aaaaaalogo" />


        </LinearLayout>
        <LinearLayout
            android:layout_width= "match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=" My Events "
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width= "match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@android:drawable/ic_input_add" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="165dp"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="177dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="206dp"
                    android:layout_height="151dp"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    tools:layout_editor_absoluteX="47dp"
                    tools:layout_editor_absoluteY="142dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="317dp"
                    android:layout_height="77dp"
                    android:text="Albertâ€™s Chess and Twerk Party\nMay 3rd\n2022 8:00AM\nTarragona, Spain "
                    tools:layout_editor_absoluteX="47dp"
                    tools:layout_editor_absoluteY="383dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="177dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="206dp"
                    android:layout_height="151dp"
                    tools:ignore="DuplicateIds"
                    tools:layout_editor_absoluteX="47dp"
                    tools:layout_editor_absoluteY="142dp"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="317dp"
                    android:layout_height="77dp"
                    android:text="Eleis Show (trap EP)\nMay 3rd\n2022 8:00AM\nLondon, United Kingdom"
                    tools:ignore="DuplicateIds"
                    tools:layout_editor_absoluteX="47dp"
                    tools:layout_editor_absoluteY="383dp" />
            </TableRow>


        </TableLayout>
    </ScrollView>


</RelativeLayout>